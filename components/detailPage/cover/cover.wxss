/* components/detailPage/cover/cover.wxss */
.outer-wrap {
  overflow: hidden;
  opacity: 0;
}
.cover {
  position: relative;
  height: 500rpx;
}
.image {
  width: 100%;
  height: 100%;
}
.content {
  position: absolute;
  bottom: 20px;
  color: white;
  padding: 0 20px;
  font-weight: bold;
}
.state {
  width: 40px;
  padding: 3px;
  font-size: 10px;
  background: rgb(52,131,233);
  text-align: center;
  border-radius: 2px;
}
.title {
  height: 50px;
  margin: 12px 0;
}
.site {
  font-size: 10px;
  margin-bottom: 10px;
}
.id,
.participant {
  padding-right: 20px;
  font-size: 10px;
}
.location-icon {
  transform: translateY(-1.5px);
}