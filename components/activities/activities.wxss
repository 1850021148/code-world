/* components/acticities/activities.wxss */
.body {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.item {
  margin-bottom: 25px;
  width: 330rpx;
}
.cover {
  position: relative;
  border-radius: 5px;
  overflow: hidden;
  width: 100%;
  height: 220rpx;
}
.cover .image {
  width: 100%;
  height: 100%;
}
.cover .state {
  padding: 2px 5px;
  position: absolute;
  top: 5px;
  left: 5px;
  display: block;
  background: white;
  font-size: 10px;
  border-radius: 3px;
}
.time {
  display: block;
  padding: 10px 0;
  font-size: 10px;
  color: rgb(231,191,139);
}
.title {
  font-size: 12px;
  font-weight: bold;
  height: 35px;
}