/* pages/detail/detail.wxss */
.bottom-bar {
  display: flex;
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 40px;
  background: white;
  box-shadow: 0 -2px 5px rgb(235,235,235);
}
.state,
.join {
  width: 50%;
  height: 100%;
}
.state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: rgb(230,208,153);
}
.state .col {
  font-size: 10px;
  text-align: center;
  font-weight: bold;
}
.join {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(225, 225, 225);
  color: white;
}
.seek-btn {
  padding-left: 0;
  padding-right: 0;
  position: fixed;
  left: 50%;
  bottom: 60px;
  transform: translateX(-50%);
  font-size: 14px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  box-shadow: 2px 5px 10px lightgray;
  background: white;
  text-align: center;
  font-weight: bold;
}