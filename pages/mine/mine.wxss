/* pages/mine/mine.wxss */

.nothasUserInfo .tip {
  position: fixed;
  bottom: 20px;
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 12px;
}

.bg-gallery {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: black;
  z-index: 1000;
}
.bg-gallery .update-btn {
  position: absolute;
  bottom: 20px;
  width: 50px;
  background: rgba(0, 0, 0, 0);
  border: 1px solid lightgray;
  color: lightgray;
  font-size: 12px;
}

/* header */
#header {
  background: rgb(40,40,40);
}
#header>.bg {
  width: 100%;
  height: 250rpx;
}
#header>.inner-box {
  padding: 0 25px;
  color: white;
}
#header .top {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
}
#avatar {
  border-radius: 50%;
  border: 1px white solid;
  width: 70px;
  height: 70px;
  transform: translateY(-15px);
  border: 3px solid rgb(40,40,40);
}
#header .right {
  transform: translateY(-5px);
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
#header .edit,
#header .friends {
  color: white;
  margin-left: 5px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  padding: 0;
  background-color: rgb(58,58,58);
  border-radius: 2px;
}
#header .edit {
  width: 120px;
}
#header .friends {
  width: 30px;
}
.username {
  font-weight: bold;
}
.attestation {
  padding: 5px 0;
  padding-bottom: 10px;
  display: flex;
  justify-content: space-between;
  font-size: 10px;
}

.nav-bar {
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
}
.nav-bar .item {
  display: flex;
  flex-direction: column;
}
.nav-bar .text {
  padding: 5px 0;
  text-align: center;
  font-size: 12px;
}
.nav-bar .icon {
  width: 35px;
  height: 35px;
  border-radius: 50%;
}