/* pages/school/school.wxss */

/* 通用css */
.padding-container {
  margin: 0 15px;
}
.t1 {
  display: block;
  padding: 20px 0;
  font-weight: bold;
}

.body {
  margin-bottom: 40px;
}

/* 发布活动按钮 */
button#create{
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100px;
  height: 30px;
  line-height: 22px;
  border-radius: 15px;
  padding: 4px 0;
  font-size: 12px;
  background: rgb(255,255,255);
  box-shadow: 0px 0px 2px rgb(120,120,120);
}

/* search-input */
#search-outer {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 15px;
  padding-top: 0;
  background: white;
}
#search {
  display: flex;
  border-radius: 5px;
  padding: 4px 10px;
  border: 1px solid lightgray;
  box-shadow: 0 0 3px rgb(220, 220, 220);
  font-size: 12px;
}
#search .placeholder {
  color: rgb(188,188,188);
}
#search input {
  width: 100%;
}

/* 轮播图 */
#banner {
  margin-top: 15px;
}