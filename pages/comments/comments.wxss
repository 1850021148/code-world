/* pages/comments/comments.wxss */
.avatar {
  width: 35px;
  height: 35px;
  border-radius: 50%;
}

/* 列表 */
.comment-list {
  padding: 15px;
  height: calc( 100vh - 100px );
  overflow-y: auto;
}
.comment-item {
  position: relative;
  padding: 10px 0;
  display: flex;
  border-top: 1px solid lightgray;
}
.comment-item:nth-child(1) {
  border: none;
}
.comment-item>.right {
  padding: 0 15px;
}
.comment-item>.right>.top {
  padding-bottom: 20px;
  font-size: 14px;
}
.comment-item .username {
  padding-right: 10px;
  font-weight: bold;
}
.comment-item .like {
  position: absolute;
  right: 0;
}
.comment-item>.right>.bottom {
  font-size: 12px;
  color: rgb(165, 165, 165);
  font-weight: bold;
}
.comment-item .time {
  padding-right: 20px;
}

/* 底部 */
.send-comment {
  padding: 10px;
  position: fixed;
  bottom: 0;
  width: 100%;
  min-height: 50px;
  display: flex;
  align-items: center;
  border-top: 1px solid lightgray;
}
.edit-box {
  margin-left: 15px;
  margin-right: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 17.5px;
  border: 1px solid rgb(180, 180, 180);
  font-size: 14px;
  flex: 1;
  min-height: 35px;
}
.edit-text {
  width: calc( 100vw - 152px );
  min-height: 100%;
  height: 100%;
  padding: 5px 15px;
  color: rgb(180, 180, 180);
}
.send-btn {
  width: 50px;
  color: blue;
  opacity: .4;
  font-weight: bold;
  text-align: center;
}