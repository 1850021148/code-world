/* pages/otherMine/other.wxss */

/* header */
#header {
  background: rgb(40,40,40);
}
#header>.bg {
  width: 100%;
  height: 250rpx;
}
#header>.inner-box {
  padding: 0 25px;
  color: white;
}
#header .top {
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
}
#avatar {
  border-radius: 50%;
  border: 1px white solid;
  width: 70px;
  height: 70px;
  transform: translateY(-15px);
  border: 3px solid rgb(40,40,40);
}
#header .right {
  transform: translateY(-5px);
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
#header .edit,
#header .friends {
  color: white;
  margin-left: 5px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  padding: 0;
  background-color: rgb(58,58,58);
  border-radius: 2px;
}
#header .edit {
  width: 120px;
}
#header .friends {
  width: 30px;
}
.username {
  font-weight: bold;
}
.attestation {
  padding: 5px 0;
  padding-bottom: 10px;
  display: flex;
  justify-content: space-between;
  font-size: 10px;
}

.nav-bar {
  padding-top: 0;
  padding-bottom: 10px;
  display: flex;
  justify-content: space-between;
}
.nav-bar .item {
  font-size: 12px;
}
.nav-bar .number {
  margin-right: 5px;
  font-weight: bold;
}
.nav-bar .title {
  color: gray;
  font-size: 10px;
}

.detail {
  font-size: 12px;
}

.label-list {
  padding-top: 5px;
  padding-bottom: 10px;
}
.label-item {
  margin-right: 5px;
  padding: 0 5px;
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  border-radius: 2px;
  display: inline-block;
  background: rgb(80,80,80);
}
.label-item.nv {
  background: pink;
}.label-item.nan {
  background: skyblue;
}